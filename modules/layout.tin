#action {| Partyname: %1%sKills made: %2%s|} {
  pwininit;
}

#alias {pwininit} {
  #var GNAME {};
  #var pwin {{1}{}{2}{}{3}{}{4}{}{5}{}{6}{}{7}{}{8}{}{9}{}};
}
#var pwin {{1}{}{2}{}{3}{}{4}{}{5}{}{6}{}{7}{}{8}{}{9}{}};

#function calrow {
  #math result {(%1-1)*3+%2};
};
#action {%1 moves to position %2,%3.} {
  #math row1 {@calrow{$GNAME[%1][0];$GNAME[%1][1]}};
  #var pwin[$row1] {};
  #var GNAME[%1][0] %2;
  #var GNAME[%1][1] %3;
  pwinupdate %1;
}
#action {%1 guides %2 to position %3,%4.} {
  #math row1 {@calrow{$GNAME[%2][0];$GNAME[%2][1]}};
  #var pwin[$row1] {};
  #var GNAME[%2][0] %3;
  #var GNAME[%2][1] %4;
  pwinupdate %2;
}
#action {%1 moves to %2,%3 and %4 moves to %5,%6.} {
  #nop #showme swap;
  #var GNAME[%1][0] %2;
  #var GNAME[%1][1] %3;
  #var GNAME[%4][0] %5;
  #var GNAME[%4][1] %6;
  pwinupdate %1;
  pwinupdate %4;
}
#action {%1 has left the party.} {
  #math row {@calrow{$GNAME[%1][0];$GNAME[%1][1]}};
  #var pwin[$row] {};
  #list GNAME delete %1;
  #draw green rounded box -13 100 -3 142 $pwin[];
}
#action {You leave the party.} {
  pwininit;
  #draw green rounded box -13 100 -3 142 $pwin[];
}

#action {^<party>: %1 >> HP:[%!*] %2%!{%} SP:[%!*] %3%!{%} EP:[%!*] %4%!{%}%*} {
  #nop #showme update;
  #var GNAME[%1][2] %2;
  #var GNAME[%1][3] %3;
  #var GNAME[%1][4] %4;
  pwinupdate %1;
}
#gag {^<party>: %1 >> HP:[%!*] %2%!{%} SP:[%!*] %3%!{%} EP:[%!*] %4%!{%}%*};

#action {^| {[A-Za-z]+}%!s{[0-9]},{[0-9]}%!*Hp:%!s%4%!{%}%!sSp:%!s%5%!{%}%!sEp:%!s%6%!{%}%!s| Exp: %7%!s|$} {
  #var GNAME[%1] {{0}{%2}{1}{%3}{2}{%4}{3}{%5}{4}{%6}};
  pwinupdate %1;
}
#action {^| {[A-Za-z]+}%!s{[0-9]},{[0-9]}%!*Hp:%!s%4%!{%}%!sSp:%!s%5%!{%}%!sEp:%!s%6%!{%}%!s|%!s|$} {
  #nop #showme %1&&%2&&%3&&%4&&%5&&%6&&%7;

  #var GNAME[%1] {{0}{%2}{1}{%3}{2}{%4}{3}{%5}{4}{%6}};
  pwinupdate %1;
}

#alias {pwinupdate} {
  #var r $GNAME[%1][0];
  #var c $GNAME[%1][1];
  #var HP  $GNAME[%1][2];
  #var SP  $GNAME[%1][3];
  #var EP  $GNAME[%1][4];
  #math {row} {@calrow{$r;$c}};
  #var pwin[$row] {<138>%1($r,$c): H:@colscale{$HP;100}$HP<138> S:@colscale{$SP;100}$SP<138> E:@colscale{$EP;100}$EP<238>};
  #draw green rounded box -13 100 -3 142 $pwin[];
}
