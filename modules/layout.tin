#FUNCTION {colscale}
{
     #switch {10 * %1 / %2}
     {
          #case {0}
          {
               #return <faa>
          };
          #case {1}
          {
               #return <fba>
          };
          #case {2}
          {
               #return <fca>
          };
          #case {3}
          {
               #return <fda>
          };
          #case {4}
          {
               #return <fea>
          };
          #case {5}
          {
               #return <ffa>
          };
          #case {6}
          {
               #return <efa>
          };
          #case {7}
          {
               #return <dfa>
          };
          #case {8}
          {
               #return <cfa>
          };
          #case {9}
          {
               #return <bfa>
          };
          #default
          {
               #return <afa>
          }
     }
}

#ACTION {H: %1/%2 S: %3/%4 E: %5/%6 EXP:%7(%8) $:%9 %10>}
{
     #variable hpcol @colscale{%1;%2};
     #variable mncol @colscale{%3;%4};
     #variable epcol @colscale{%5;%6};
     #format time %t {%H:%M};
     #format {prompt1} {H: %s%s<238>/<138>%s<099>} {$hpcol} {%1} {%2};
     #format {prompt2} {S: %s%s<238>/<138>%s<099>} {$mncol} {%3} {%4};
     #format {prompt3} {E: %s%s<238>/<138>%s<099>} {$epcol} {%5} {%6}
}
